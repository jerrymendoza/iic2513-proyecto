<div class="card">
  <div class="card-title">
    <% if (university.isNewRecord) { %>
      New University
    <% } else { %>
      Edit University
    <% } %>
  </div>
  <div class="card-contents">
  <form action="<%= submitUniversityPath %>" method="post">
    <% if (!university.isNewRecord) { %>
      <input type="hidden" name="_method" value="patch" />
    <% } %>
    <div  class="field">
      <label for="code">Code</label>
      <input type="text" name="code" value="<%= university.code %>" required/>
    </div>
    <div  class="field">
      <label for="name">Name</label>
      <input type="text" name="name" value="<%= university.name %>" required/>
    </div>
    <div  class="field">
      <label for="domain">Domain</label>
      <input type="text" name="domain" pattern="[a-z0-9]+[a-z0-9-]*[a-z0-9]+\.[a-z0-9]{2,}" value="<%= university.domain %>" required/>
    </div>
    <div  class="field">
      <label for="photo">Photo for your university (Only JPEG)</label>
      <input type="file" name="photo" accept="image/jpeg"/>
    </div>
    <div  class="field">
      <% if (university.isNewRecord) { %>
        <input type="submit" name="create" value="Create" />
      <% } else { %>
        <input type="submit" name="update" value="Update" />
      <% } %>
    </div>
  </form>
  </div>
</div>