<div>
    <% if (locals.errors) { %>
      <div class="errors">
        You need to fix the following errors:
        <ul>
          <% errors.forEach(error => { %>
            <li><%= error.message %></li>
          <% }); %>
        </ul>
      </div>
    <% } %>
    <form action="<%= submitCoursePath %>" method="post">
      <% if (!course.isNewRecord) { %>
        <input type="hidden" name="_method" value="patch" />
      <% } %>
      <div  class="field">
        <label for="UniversityId">University</label>
        <select name="UniversityId">
            <% universities.forEach((university) => { %>
            <option value="<%= university.id %>"><%= university.name %></option>
            <% }) %>
        </select>
      </div>
      <div  class="field">
        <label for="code">Code</label>
        <input type="text" name="code" value="<%= course.code %>" />
      </div>
      <div  class="field">
        <label for="name">Name</label>
        <input type="text" name="name" value="<%= course.name %>" />
      </div>
      <div  class="field">
        <label for="verified">Verified</label>
        <input type="text" name="verified" value="<%= course.verified %>" />
      </div>
      <div  class="field">
        <label for="description">Description</label>
        <input type="text" name="description" value="<%= course.description %>" />
      </div>
      <div  class="field">
        <% if (course.isNewRecord) { %>
          <input type="submit" name="create" value="Create" />
        <% } else { %>
          <input type="submit" name="update" value="Update" />
        <% } %>
      </div>
    </form>
  </div>