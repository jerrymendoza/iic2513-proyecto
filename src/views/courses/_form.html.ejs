<div>
    <% if (locals.errors) { %>
      <div class="errors">
        You need to fix the following errors:
        <ul>
          <% errors.forEach(error => { %>
            <li><%= error.message %></li>
          <% }); %>
        </ul>
      </div>
    <% } %>
    <form action="<%= submitCoursePath %>" method="post">
      <% if (!course.isNewRecord) { %>
        <input type="hidden" name="_method" value="patch" />
      <% } %>
      <input type="hidden" name="UniversityId" value="<%=course.UniversityId%>"/>
      <div  class="field">
        <label for="code">Code</label>
        <input type="text" name="code" value="<%= course.code %>" required/>
      </div>
      <div  class="field">
        <label for="name">Name</label>
        <input type="text" name="name" value="<%= course.name %>" required/>
      </div>
      <div  class="field">
        <label for="description">Description</label>
        <input type="text" name="description" value="<%= course.description %>" required/>
      </div>
      <div  class="field">
        <% if (course.isNewRecord) { %>
          <input type="submit" name="create" value="Create" />
        <% } else { %>
          <input type="submit" name="update" value="Update" />
        <% } %>
      </div>
    </form>
  </div>