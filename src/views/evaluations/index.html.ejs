<%- include('../menu', {active: 'evaluations'}) %>
<h2>Evaluations</h2>
<a href="<%= newEvaluationPath %>">New Evaluation</a>
<% if (!evaluationsList.length) { %>
  <p>No results</p>
<% } else { %>
  <table>
    <thead>
      <tr>
        <th>Course</th>
        <th>Professor</th>
        <th>Year</th>
        <th>Semester</th>
        <th>Comment</th>
        <th>Time Rating</th>
        <th>Difficulty Rating</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% evaluationsList.forEach((evaluation) => { %>
        <tr>
          <td><%= evaluation.Course.code %></td>
          <td><%= evaluation.ProfessorName.name %></td>
          <td><%= evaluation.year %></td>
          <td><%= evaluation.semester %></td>
          <td><%= evaluation.comment %></td>
          <td><%= evaluation.timeRating %></td>
          <td><%= evaluation.difficultyRating %></td>
          <td>
            <form action="<%= editEvaluationPath(evaluation) %>" method="get">
              <input type="submit" value="Edit">
            </form>
          </td>
          <td>
            <form action="<%= deleteEvaluationPath(evaluation) %>" method="get">
              <input type="hidden" name="_method" value="delete">
              <input type="submit" value="Delete">
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>